     "slate-gray": ['#f1f1f1', '#2d2d2d', '#708c9c', '#9baeb8', '#526270', '#e5e7e9', '#c3d1d4', '#5b9760', '#dd9142', '#c04a42', '#3c8dc4', '#d6d6d6', '#808080', '#b2b2b2', '#7c949e'],
     "tropical-forest": ['#d7e9d4', '#2f6e3a', '#65a365', '#94be94', '#467e4a', '#ddeedc', '#a6cfa6', '#dc9036', '#e0b142', '#b53e3e', '#4ba6b3', '#cce1cc', '#556766', '#959a95', '#76b162'],
    };


    function applyTheme(name) {
      const colors = themes[name] || themes["midnight-sapphire"];
      const doc = document.documentElement.style;
      doc.setProperty('--bg-color', colors[0]);
      doc.setProperty('--text-color', colors[1]);
      doc.setProperty('--primary-color', colors[2]);
      doc.setProperty('--secondary-color', colors[3]);
      doc.setProperty('--button-color', colors[4]);
      doc.setProperty('--card-color', colors[5]);
      doc.setProperty('--border-color', colors[6]);
      doc.setProperty('--success-color', colors[7]);
      doc.setProperty('--warning-color', colors[8]);
      doc.setProperty('--danger-color', colors[9]);
      doc.setProperty('--info-color', colors[10]);
      doc.setProperty('--input-bg', colors[11]);
      doc.setProperty('--input-text', colors[12]);
      doc.setProperty('--disabled-color', colors[13]);
      doc.setProperty('--highlight-color', colors[14]);
      localStorage.setItem("theme", name);
    }

    if (themeSelect) {
      themeSelect.addEventListener("change", (e) => {
        applyTheme(e.target.value);
      });
    }

    if (darkToggle && modeIcon) {
      darkToggle.addEventListener("click", () => {
        const isDark = document.body.classList.toggle("dark-mode");
        localStorage.setItem("dark-mode", isDark);
        modeIcon.className = isDark ? "fas fa-moon" : "fas fa-sun";
      });
    }

    let balanceVisible = false;

    async function toggleBalance() {
      const balanceText = document.querySelector(".balance-text");
      if (balanceVisible) {
        balanceText.innerHTML = '<i class="fas fa-wallet"></i>';
        balanceVisible = false;
        return;
      }
      try {
        const response = await fetch("/balance");
        const data = await response.json();
        balanceText.innerHTML = data.balance ? `<i class="fas fa-wallet"></i> ${data.balance.toLocaleString()}$` : '<i class="fas fa-wallet"></i> 0$';
      } catch {
        balanceText.innerHTML = '<i class="fas fa-wallet"></i> Error';
      }
      balanceVisible = true;
    }

    document.addEventListener("DOMContentLoaded", () => {
      // Highlight active nav link
      const path = window.location.pathname;
      document.querySelectorAll("nav.nav a").forEach(link => {
        if (link.getAttribute("href") === path) {
          link.classList.add("active");
        }
      });

      // Restore theme and dark mode
      const savedTheme = localStorage.getItem("theme") || "midnight-sapphire";
      const isDarkMode = localStorage.getItem("dark-mode") === "true";

      applyTheme(savedTheme);
      if (themeSelect) themeSelect.value = savedTheme;

      if (isDarkMode) {
        document.body.classList.add("dark-mode");
        if (modeIcon) modeIcon.className = "fas fa-moon";
      }
    });
  </script>
</body>

