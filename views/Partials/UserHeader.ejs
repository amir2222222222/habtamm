  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Dashboard Header</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@700&family=Poppins:wght@400;600&display=swap"
    rel="stylesheet" />
  <style>
    :root {
      --bg-color: #f5f7fa;
      --text-color: #1e293b;
      --primary-color: #3b82f6;
      --secondary-color: #2563eb;
      --button-color: #3b82f6;
      --card-color: #ffffff;
      --border-color: #e2e8f0;
      --success-color: #10b981;
      --warning-color: #f59e0b;
      --danger-color: #ef4444;
      --info-color: #0ea5e9;
      --input-bg: #ffffff;
      --input-text: #1e293b;
      --disabled-color: #94a3b8;
      --highlight-color: #e2e8f0;
    }

    .dark-mode {
      --bg-color: #0f172a;
      --text-color: #f8fafc;
      --primary-color: #6366f1;
      --secondary-color: #818cf8;
      --button-color: #6366f1;
      --card-color: #1e293b;
      --border-color: #334155;
      --success-color: #10b981;
      --warning-color: #f59e0b;
      --danger-color: #ef4444;
      --info-color: #0ea5e9;
      --input-bg: #1e293b;
      --input-text: #e2e8f0;
      --disabled-color: #64748b;
      --highlight-color: #334155;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }


    header {
      display: flex;
      flex-direction: row;
      align-items: end;
      justify-content: space-between;
      background-color: var(--card-color);
      border-bottom: 2px solid var(--border-color);
      position: sticky;
      top: 0;
      z-index: 1000;
      transition: all 0.3s ease;
    }

    .brand {
      font-size: 30px;
      font-family: 'Orbitron', sans-serif;
      font-weight: 900;
      display: flex;
      align-items: center;
      padding-top: 10px;
      color: var(--primary-color);
      transition: color 0.3s ease;
        margin-left: 20px;
  
    }

    .brand span:last-child {
      font-family: 'Poppins', sans-serif;
      font-weight: 600;
      color: var(--text-color);
    }

    .nav {
      position: relative;
      display: flex;
      flex-direction: row;
      gap: 30px;
      justify-content: space-between;
    }

    nav.nav a {
      font-size: 17px;
      text-decoration: none;
      color: var(--text-color);
      padding-bottom: 4px;
      display: flex;
      align-items: center;
      gap: 5px;
      position: relative;
      transition: color 0.2s ease;
    }

    nav.nav a::after {
      content: "";
      position: absolute;
      bottom: -2px;
      left: 0;
      width: 0%;
      height: 2px;
      background: var(--primary-color);
      transition: width 0.3s ease;
    }

    nav.nav a:hover,
    nav.nav a.active {
      color: var(--primary-color);
    }

    nav.nav a:hover::after,
    nav.nav a.active::after {
      width: 100%;
    }

    .actions {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 15px;
    }

    .balance-text {
      font-weight: 600;
      color: var(--text-color);
      padding: 6px 14px;
      cursor: pointer;
      border: 1px solid var(--border-color);
      border-radius: 6px;
      transition: all 0.3s ease;
      background-color: var(--card-color);
    }

    .balance-text:hover {
      background-color: var(--primary-color);
      color: #fff;
    }

    .logout-button {
      background-color: var(--danger-color);
      border: none;
      color: white;
      padding: 6px 14px;
      border-radius: 6px;
      cursor: pointer;
      font-size: 1rem;
      display: flex;
      align-items: center;
      transition: all 0.2s ease;
    }

    .logout-button i {
      margin-right: 6px;
    }

    .logout-button:hover {
      background-color: var(--text-color);
      box-shadow: inset 0 0 0 2px var(--danger-color);
    }

    .theme-toggle {
      display: flex;
      align-items: center;
      gap: 10px;
    }
.theme-select {
  padding: 6px 12px;
  border: 1px solid var(--border-color);
  border-radius: 6px;
  font-size: 14px;
  background-color: var(--highlight-color);
   color: white;
  box-shadow: inset 1px 1px 2px rgba(0, 0, 0, 0.05);
  cursor: pointer;
  transition: all 0.2s ease;
  background: var(--primary-color);
}

.theme-select:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
}

.theme-select:hover {
    border-color: var(--border-color);
}

    .dark-toggle {
      width: 36px;
      height: 36px;
      margin-right: 20px;
      border-radius: 50%;
      background-color: transparent;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 2px solid var(--border-color);
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .dark-toggle i {
      font-size: 16px;
      color: var(--text-color);
    }

    .dark-mode .dark-toggle i {
      color: var(--warning-color);
    }
  </style>
</head>

<body>
  <header>
    <div class="brand">
      <i class="fas fa-dice"></i><span>Habtam</span><span>Bingo</span>
    </div>

    <nav class="nav">
      <a href="/home"><i class="fas fa-home"></i>Home</a>
      <a href="/profile"><i class="fas fa-user"></i>Profile</a>
      <a href="/status"><i class="fas fa-signal"></i>Status</a>
      <a href="/games"><i class="fas fa-gamepad"></i>Games</a>
      <a href="/setting"><i class="fas fa-cog"></i>Setting</a>
    </nav>

    <div class="actions">
      <div class="theme-toggle">
      <select id="themeSelect" class="theme-select">
        <option value="sunset-blaze">Sunset Blaze</option>
        <option value="forest-emerald">Forest Emerald</option>
        <option value="royal-amethyst">Royal Amethyst</option>
        <option value="golden-sand">Golden Sand</option>
        <option value="ocean-breeze">Ocean Breeze</option>
        <option value="crimson-dusk">Crimson Dusk</option>
        <option value="mint-fresh">Mint Fresh</option>
        <option value="coffee-classic">Coffee Classic</option>
        <option value="lavender-dream">Lavender Dream</option>
        <option value="slate-gray">Slate Gray</option>
        <option value="tropical-forest">Tropical Forest</option>
      </select>


        <div class="balance-text" onclick="toggleBalance()">
          <i class="fas fa-wallet"></i>
        </div>

        <form action="/logout" method="POST">
          <button type="submit" class="logout-button"><i class="fas fa-sign-out-alt"></i>Log Out</button>
        </form>

        <div class="dark-toggle" id="darkToggle">
          <i class="fas fa-sun" id="modeIcon"></i>
        </div>
      </div>
    </div>
  </header>
  <script>
    const themeSelect = document.getElementById("themeSelect");
    const darkToggle = document.getElementById("darkToggle");
    const modeIcon = document.getElementById("modeIcon");

   const themes = {
      "sunset-blaze": ['#fae3e3', '#3a3e3f', '#d54b87', '#d07fa6', '#c46a44', '#fbe4e4', '#e76e6e', '#42a69c', '#e2aa58', '#b4473a', '#3d8edb', '#f6d6d8', '#747b7e', '#e6a190', '#db7ca6'],
     "forest-emerald": ['#e3f0db', '#2f5c38', '#66a062', '#94b98a', '#6a8e4e', '#dceddb', '#aac99c', '#da9545', '#e3b04d', '#b53a3a', '#4693c2', '#d6e7d4', '#55686c', '#8f9a90', '#80b263'],
