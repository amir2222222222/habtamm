            lines.push(lcCells);
          }
        }

        const uniqueMatched = new Set();
        lines.forEach(line => {
          let lineContainsLast = false;
          line.forEach(cell => {
            if (cell.textContent === String(lastCalledNumber)) lineContainsLast = true;
            uniqueMatched.add(cell);
          });

          winCount++;
